  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
    import { getFirestore, collection, doc, setDoc, getDoc, onSnapshot, deleteDoc, updateDoc, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';
    import { getStorage, ref, uploadBytes, getDownloadURL } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-storage.js';

    // Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyCVPfcwZeliu4mwm26xa1mi421P8NGKp1I",
      authDomain: "tac-ops-60d32.firebaseapp.com",
      projectId: "tac-ops-60d32",
      storageBucket: "tac-ops-60d32.firebasestorage.app",
      messagingSenderId: "845190518284",
      appId: "1:845190518284:web:ac9bd75173b348fd28c029"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);
    const storage = getStorage(app);

    // State
    let currentOpCode = null;
    let map = null;
    let operatorMarkers = {};
    let targetMarker = null;
    let suspectPhotos = [];
    let targetPhotos = [];
    let unsubscribeOperators = null;

    // Generate 6-character op code
    function generateOpCode() {
      const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
      let code = '';
      for (let i = 0; i < 6; i++) {
        code += chars[Math.floor(Math.random() * chars.length)];
      }
      return code;
    }

    // Initialize map
    function initMap() {
      if (map) return;
      
      map = L.map('command-map').setView([39.8283, -98.5795], 4);
      
      L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
        attribution: 'Esri'
      }).addTo(map);

      L.tileLayer('https://{s}.basemaps.cartocdn.com/light_only_labels/{z}/{x}/{y}{r}.png', {
        attribution: ''
      }).addTo(map);
    }

    // Photo upload handling
    function setupPhotoUpload(uploadEl, previewsEl, photoArray) {
      const input = uploadEl.querySelector('input');
      
      uploadEl.addEventListener('click', () => input.click());
      
      input.addEventListener('change', (e) => {
        Array.from(e.target.files).forEach(file => {
          const reader = new FileReader();
          reader.onload = (e) => {
            photoArray.push({ data: e.target.result, file });
            renderPhotoPreviews(previewsEl, photoArray);
          };
          reader.readAsDataURL(file);
        });
        input.value = '';
      });
    }

    function renderPhotoPreviews(container, photoArray) {
      container.innerHTML = photoArray.map((photo, i) => `
        <div class="photo-preview">
          <img src="${photo.data || photo.url}" alt="Photo ${i+1}">
          <button class="remove" data-index="${i}">&times;</button>
        </div>
      `).join('');

      container.querySelectorAll('.remove').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const index = parseInt(btn.dataset.index);
          photoArray.splice(index, 1);
          renderPhotoPreviews(container, photoArray);
        });
      });
    }

    // Upload photos to Firebase Storage
    async function uploadPhotos(photos, opCode, type) {
      const urls = [];
      for (let i = 0; i < photos.length; i++) {
        const photo = photos[i];
        if (photo.url) {
          urls.push(photo.url);
          continue;
        }
        const storageRef = ref(storage, `operations/${opCode}/${type}/${Date.now()}_${i}.jpg`);
        const response = await fetch(photo.data);
        const blob = await response.blob();
        await uploadBytes(storageRef, blob);
        const url = await getDownloadURL(storageRef);
        urls.push(url);
      }
      return urls;
    }

    // Create operation
    async function createOperation() {
      const name = document.getElementById('op-name').value.trim();
      const address = document.getElementById('op-address').value.trim();
      const coords = document.getElementById('op-coords').value.trim();
      const description = document.getElementById('op-description').value.trim();

      if (!name) {
        alert('Please enter an operation name');
        return;
      }

      document.getElementById('loading').classList.remove('hidden');

      try {
        const opCode = generateOpCode();
        
        // Upload photos
        const suspectUrls = await uploadPhotos(suspectPhotos, opCode, 'suspects');
        const targetUrls = await uploadPhotos(targetPhotos, opCode, 'targets');

        // Parse coordinates if provided
        let lat = null, lng = null;
        if (coords) {
          const parts = coords.split(',').map(s => parseFloat(s.trim()));
          if (parts.length === 2 && !isNaN(parts[0]) && !isNaN(parts[1])) {
            lat = parts[0];
            lng = parts[1];
          }
        }

        // Save to Firestore
        await setDoc(doc(db, 'operations', opCode), {
          name,
          address,
          description,
          lat,
          lng,
          suspectPhotos: suspectUrls,
          targetPhotos: targetUrls,
          createdAt: serverTimestamp(),
          active: true
        });

        currentOpCode = opCode;
        localStorage.setItem('currentOpCode', opCode);
        showActiveMission(opCode, { name, address, description, suspectPhotos: suspectUrls, targetPhotos: targetUrls, lat, lng });
        subscribeToOperators(opCode);

      } catch (error) {
        console.error('Error creating operation:', error);
        alert('Error creating operation: ' + error.message);
      }

      document.getElementById('loading').classList.add('hidden');
    }

    // Show active mission UI
    function showActiveMission(opCode, data) {
      document.getElementById('no-mission').style.display = 'none';
      document.getElementById('active-mission').style.display = 'block';
      document.getElementById('header-code').textContent = opCode;
      document.getElementById('join-code').textContent = opCode;
      document.getElementById('active-op-name').textContent = data.name;
      document.getElementById('active-address').textContent = data.address || 'Not specified';
      document.getElementById('active-description').textContent = data.description || 'No description';

      // Show photos
      const suspectContainer = document.getElementById('active-suspect-photos');
      const targetContainer = document.getElementById('active-target-photos');
      
      suspectContainer.innerHTML = (data.suspectPhotos || []).map(url => `
        <div class="photo-preview"><img src="${url}" alt="Suspect"></div>
      `).join('') || '<p style="color:#666">No photos</p>';
      
      targetContainer.innerHTML = (data.targetPhotos || []).map(url => `
        <div class="photo-preview"><img src="${url}" alt="Target"></div>
      `).join('') || '<p style="color:#666">No photos</p>';

      // Set map to target location
      if (data.lat && data.lng) {
        map.setView([data.lat, data.lng], 16);
        if (targetMarker) map.removeLayer(targetMarker);
        targetMarker = L.marker([data.lat, data.lng], {
          icon: L.divIcon({
            className: 'target-marker',
            html: '<div style="background:#e94560;width:20px;height:20px;border-radius:50%;border:3px solid #fff;"></div>',
            iconSize: [20, 20],
            iconAnchor: [10, 10]
          })
        }).addTo(map).bindPopup('<b>TARGET</b><br>' + (data.address || ''));
      }

      updateConnectionStatus(true);
    }

    // Subscribe to operator locations
    function subscribeToOperators(opCode) {
      if (unsubscribeOperators) unsubscribeOperators();

      unsubscribeOperators = onSnapshot(
        collection(db, 'operations', opCode, 'operators'),
        (snapshot) => {
          const operators = [];
          snapshot.forEach(doc => {
            operators.push({ id: doc.id, ...doc.data() });
          });
          updateOperatorDisplay(operators);
        }
      );
    }

    // Update operator markers and list
    function updateOperatorDisplay(operators) {
      const list = document.getElementById('operator-list');
      const count = document.getElementById('operator-count');
      const summary = document.getElementById('operator-summary');

      // Filter to recently active operators (last 2 minutes)
      const now = Date.now();
      const activeOps = operators.filter(op => {
        const lastUpdate = op.lastUpdate?.toDate?.() || new Date(op.lastUpdate);
        return (now - lastUpdate.getTime()) < 120000;
      });

      count.textContent = activeOps.length;
      summary.textContent = `${activeOps.length} operator${activeOps.length !== 1 ? 's' : ''} online`;

      if (activeOps.length === 0) {
        list.innerHTML = '<p style="color: #666; text-align: center; padding: 20px;">No operators connected</p>';
      } else {
        list.innerHTML = activeOps.map(op => `
          <div class="operator-item">
            <div class="operator-dot"></div>
            <div class="operator-info">
              <div class="operator-name">${op.name || 'Unknown'}</div>
              <div class="operator-callsign">${op.callsign || op.id}</div>
            </div>
          </div>
        `).join('');
      }

      // Update map markers
      // Remove old markers
      Object.keys(operatorMarkers).forEach(id => {
        if (!activeOps.find(op => op.id === id)) {
          map.removeLayer(operatorMarkers[id]);
          delete operatorMarkers[id];
        }
      });

      // Update/add markers
      activeOps.forEach(op => {
        if (!op.lat || !op.lng) return;

        const color = op.color || '#00ff88';
        
        if (operatorMarkers[op.id]) {
          operatorMarkers[op.id].setLatLng([op.lat, op.lng]);
        } else {
          operatorMarkers[op.id] = L.marker([op.lat, op.lng], {
            icon: L.divIcon({
              className: 'operator-marker',
              html: `<div style="background:${color};width:16px;height:16px;border-radius:50%;border:3px solid #fff;box-shadow:0 2px 6px rgba(0,0,0,0.5);"></div>`,
              iconSize: [16, 16],
              iconAnchor: [8, 8]
            })
          }).addTo(map).bindPopup(`<b>${op.callsign || op.name || 'Operator'}</b>`);
        }
      });

      // Fit map to show all operators
      if (activeOps.length > 0 && Object.keys(operatorMarkers).length > 0) {
        const group = L.featureGroup(Object.values(operatorMarkers));
        if (targetMarker) group.addLayer(targetMarker);
        // Only fit bounds if user hasn't manually zoomed
      }
    }

    // End operation
    async function endOperation() {
      if (!confirm('Are you sure you want to end this operation?')) return;

      document.getElementById('loading').classList.remove('hidden');

      try {
        await updateDoc(doc(db, 'operations', currentOpCode), {
          active: false,
          endedAt: serverTimestamp()
        });

        if (unsubscribeOperators) unsubscribeOperators();
        
        currentOpCode = null;
        localStorage.removeItem('currentOpCode');
        
        // Reset UI
        document.getElementById('no-mission').style.display = 'block';
        document.getElementById('active-mission').style.display = 'none';
        document.getElementById('header-code').textContent = 'NO ACTIVE OP';
        document.getElementById('op-name').value = '';
        document.getElementById('op-address').value = '';
        document.getElementById('op-coords').value = '';
        document.getElementById('op-description').value = '';
        suspectPhotos = [];
        targetPhotos = [];
        document.getElementById('suspect-previews').innerHTML = '';
        document.getElementById('target-previews').innerHTML = '';

        // Clear map
        Object.values(operatorMarkers).forEach(m => map.removeLayer(m));
        operatorMarkers = {};
        if (targetMarker) {
          map.removeLayer(targetMarker);
          targetMarker = null;
        }

      } catch (error) {
        console.error('Error ending operation:', error);
        alert('Error ending operation: ' + error.message);
      }

      document.getElementById('loading').classList.add('hidden');
    }

    // Copy operator link
    function copyOperatorLink() {
      const url = window.location.href.replace('toc-command.html', 'toc-operator.html') + '?code=' + currentOpCode;
      navigator.clipboard.writeText(url).then(() => {
        alert('Link copied to clipboard!');
      });
    }

    // Update connection status
    function updateConnectionStatus(connected) {
      const dot = document.getElementById('connection-dot');
      const status = document.getElementById('connection-status');
      
      if (connected) {
        dot.classList.remove('disconnected');
        status.textContent = 'Connected';
      } else {
        dot.classList.add('disconnected');
        status.textContent = 'Disconnected';
      }
    }

    // Check for existing operation on load
    async function checkExistingOperation() {
      const savedCode = localStorage.getItem('currentOpCode');
      if (!savedCode) {
        document.getElementById('loading').classList.add('hidden');
        return;
      }

      try {
        const docSnap = await getDoc(doc(db, 'operations', savedCode));
        if (docSnap.exists() && docSnap.data().active) {
          currentOpCode = savedCode;
          showActiveMission(savedCode, docSnap.data());
          subscribeToOperators(savedCode);
        } else {
          localStorage.removeItem('currentOpCode');
        }
      } catch (error) {
        console.error('Error checking operation:', error);
        localStorage.removeItem('currentOpCode');
      }

      document.getElementById('loading').classList.add('hidden');
    }

    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.panel').forEach(p => p.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById('panel-' + tab.dataset.panel).classList.add('active');
        
        if (tab.dataset.panel === 'map') {
          setTimeout(() => map.invalidateSize(), 100);
        }
      });
    });

    // Event listeners
    document.getElementById('create-op').addEventListener('click', createOperation);
    document.getElementById('end-op').addEventListener('click', endOperation);
    document.getElementById('copy-link').addEventListener('click', copyOperatorLink);

    // Setup photo uploads
    setupPhotoUpload(
      document.getElementById('suspect-upload'),
      document.getElementById('suspect-previews'),
      suspectPhotos
    );
    setupPhotoUpload(
      document.getElementById('target-upload'),
      document.getElementById('target-previews'),
      targetPhotos
    );

    // Initialize
    initMap();
    checkExistingOperation();
    updateConnectionStatus(true);
  </script>
</body>
</html>
