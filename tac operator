  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
    import { getFirestore, doc, getDoc, setDoc, onSnapshot, collection, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

    // Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyCVPfcwZeliu4mwm26xa1mi421P8NGKp1I",
      authDomain: "tac-ops-60d32.firebaseapp.com",
      projectId: "tac-ops-60d32",
      storageBucket: "tac-ops-60d32.firebasestorage.app",
      messagingSenderId: "845190518284",
      appId: "1:845190518284:web:ac9bd75173b348fd28c029"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    // State
    let currentOpCode = null;
    let operatorId = null;
    let operatorName = '';
    let operatorCallsign = '';
    let map = null;
    let myMarker = null;
    let targetMarker = null;
    let operatorMarkers = {};
    let myPosition = null;
    let watchId = null;
    let unsubscribeMission = null;
    let unsubscribeOperators = null;

    // Generate unique operator ID
    function getOperatorId() {
      let id = localStorage.getItem('operatorId');
      if (!id) {
        id = 'op_' + Math.random().toString(36).substr(2, 9);
        localStorage.setItem('operatorId', id);
      }
      return id;
    }

    // Code input handling
    const codeInputs = document.querySelectorAll('#code-inputs input');
    codeInputs.forEach((input, index) => {
      input.addEventListener('input', (e) => {
        const val = e.target.value.toUpperCase();
        e.target.value = val;
        
        if (val && index < 5) {
          codeInputs[index + 1].focus();
        }
      });

      input.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && !e.target.value && index > 0) {
          codeInputs[index - 1].focus();
        }
      });

      input.addEventListener('paste', (e) => {
        e.preventDefault();
        const paste = (e.clipboardData.getData('text') || '').toUpperCase().replace(/[^A-Z0-9]/g, '');
        paste.split('').slice(0, 6).forEach((char, i) => {
          if (codeInputs[i]) codeInputs[i].value = char;
        });
        if (paste.length >= 6) codeInputs[5].focus();
      });
    });

    // Get entered code
    function getEnteredCode() {
      return Array.from(codeInputs).map(i => i.value).join('').toUpperCase();
    }

    // Join operation
    async function joinOperation() {
      const code = getEnteredCode();
      const name = document.getElementById('operator-name').value.trim();
      const callsign = document.getElementById('operator-callsign').value.trim();

      if (code.length !== 6) {
        showError('Please enter the full 6-character code');
        return;
      }

      if (!name) {
        showError('Please enter your name');
        return;
      }

      document.getElementById('loading').classList.remove('hidden');
      showError('');

      try {
        // Check if operation exists and is active
        const opDoc = await getDoc(doc(db, 'operations', code));
        
        if (!opDoc.exists()) {
          showError('Operation not found');
          document.getElementById('loading').classList.add('hidden');
          return;
        }

        if (!opDoc.data().active) {
          showError('Operation has ended');
          document.getElementById('loading').classList.add('hidden');
          return;
        }

        // Save operator info
        currentOpCode = code;
        operatorId = getOperatorId();
        operatorName = name;
        operatorCallsign = callsign;

        localStorage.setItem('lastOpCode', code);
        localStorage.setItem('operatorName', name);
        localStorage.setItem('operatorCallsign', callsign);

        // Register operator in Firebase
        await setDoc(doc(db, 'operations', code, 'operators', operatorId), {
          name: operatorName,
          callsign: operatorCallsign || null,
          joinedAt: serverTimestamp(),
          lastUpdate: serverTimestamp(),
          lat: null,
          lng: null
        });

        // Show app
        document.getElementById('join-screen').classList.add('hidden');
        document.getElementById('app').classList.add('active');
        document.getElementById('display-code').textContent = code;

        // Load mission data
        loadMissionData(opDoc.data());
        subscribeToMission();
        subscribeToOperators();
        startLocationTracking();

      } catch (error) {
        console.error('Error joining:', error);
        showError('Error joining operation');
      }

      document.getElementById('loading').classList.add('hidden');
    }

    function showError(msg) {
      document.getElementById('join-error').textContent = msg;
    }

    // Load mission briefing
    function loadMissionData(data) {
      document.getElementById('brief-name').textContent = data.name || 'Unnamed Operation';
      document.getElementById('brief-address-text').textContent = data.address || 'Not specified';
      document.getElementById('brief-description').textContent = data.description || 'No description provided';

      // Suspect photos
      const suspectContainer = document.getElementById('suspect-photos');
      if (data.suspectPhotos && data.suspectPhotos.length > 0) {
        suspectContainer.innerHTML = data.suspectPhotos.map(url => `
          <div class="photo-item" data-url="${url}">
            <img src="${url}" alt="Suspect">
          </div>
        `).join('');
      } else {
        suspectContainer.innerHTML = '<div class="no-photos">No photos</div>';
      }

      // Target photos
      const targetContainer = document.getElementById('target-photos');
      if (data.targetPhotos && data.targetPhotos.length > 0) {
        targetContainer.innerHTML = data.targetPhotos.map(url => `
          <div class="photo-item" data-url="${url}">
            <img src="${url}" alt="Target">
          </div>
        `).join('');
      } else {
        targetContainer.innerHTML = '<div class="no-photos">No photos</div>';
      }

      // Add click handlers for photos
      document.querySelectorAll('.photo-item').forEach(item => {
        item.addEventListener('click', () => {
          openPhotoModal(item.dataset.url);
        });
      });

      // Set target marker on map if coordinates exist
      if (data.lat && data.lng && map) {
        setTargetMarker(data.lat, data.lng, data.address);
      }
    }

    // Subscribe to mission updates
    function subscribeToMission() {
      unsubscribeMission = onSnapshot(doc(db, 'operations', currentOpCode), (doc) => {
        if (doc.exists()) {
          const data = doc.data();
          if (!data.active) {
            alert('Operation has ended');
            location.reload();
            return;
          }
          loadMissionData(data);
        }
      });
    }

    // Subscribe to operator locations
    function subscribeToOperators() {
      unsubscribeOperators = onSnapshot(
        collection(db, 'operations', currentOpCode, 'operators'),
        (snapshot) => {
          const operators = [];
          snapshot.forEach(doc => {
            if (doc.id !== operatorId) { // Don't include self
              operators.push({ id: doc.id, ...doc.data() });
            }
          });
          updateTeamMarkers(operators);
        }
      );
    }

    // Initialize map
    function initMap() {
      if (map) return;

      map = L.map('operator-map', {
        zoomControl: false
      }).setView([39.8283, -98.5795], 4);

      L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
        attribution: ''
      }).addTo(map);

      L.tileLayer('https://{s}.basemaps.cartocdn.com/light_only_labels/{z}/{x}/{y}{r}.png', {
        attribution: ''
      }).addTo(map);
    }

    // Set target marker
    function setTargetMarker(lat, lng, address) {
      if (targetMarker) map.removeLayer(targetMarker);
      
      targetMarker = L.marker([lat, lng], {
        icon: L.divIcon({
          className: 'target-icon',
          html: '<div style="background:#e94560;width:20px;height:20px;border-radius:50%;border:3px solid #fff;box-shadow:0 2px 8px rgba(0,0,0,0.5);"></div>',
          iconSize: [20, 20],
          iconAnchor: [10, 10]
        })
      }).addTo(map).bindPopup('<b>TARGET</b><br>' + (address || ''));
    }

    // Update my position on map
    function updateMyMarker(lat, lng) {
      if (!map) return;

      if (myMarker) {
        myMarker.setLatLng([lat, lng]);
      } else {
        myMarker = L.marker([lat, lng], {
          icon: L.divIcon({
            className: 'my-marker',
            html: `<div style="background:#2196F3;width:18px;height:18px;border-radius:50%;border:3px solid #fff;box-shadow:0 2px 8px rgba(0,0,0,0.5);"></div>`,
            iconSize: [18, 18],
            iconAnchor: [9, 9]
          })
        }).addTo(map).bindPopup('<b>You</b><br>' + (operatorCallsign || operatorName));

        // Center map on first position
        map.setView([lat, lng], 17);
      }
    }

    // Update team markers
    function updateTeamMarkers(operators) {
      if (!map) return;

      const now = Date.now();

      // Remove markers for operators no longer active
      Object.keys(operatorMarkers).forEach(id => {
        if (!operators.find(op => op.id === id)) {
          map.removeLayer(operatorMarkers[id]);
          delete operatorMarkers[id];
        }
      });

      // Update/add markers
      operators.forEach(op => {
        if (!op.lat || !op.lng) return;

        // Skip if last update was more than 2 minutes ago
        const lastUpdate = op.lastUpdate?.toDate?.() || new Date(op.lastUpdate);
        if (now - lastUpdate.getTime() > 120000) return;

        if (operatorMarkers[op.id]) {
          operatorMarkers[op.id].setLatLng([op.lat, op.lng]);
        } else {
          operatorMarkers[op.id] = L.marker([op.lat, op.lng], {
            icon: L.divIcon({
              className: 'team-marker',
              html: '<div style="background:#00ff88;width:14px;height:14px;border-radius:50%;border:2px solid #fff;box-shadow:0 2px 6px rgba(0,0,0,0.4);"></div>',
              iconSize: [14, 14],
              iconAnchor: [7, 7]
            })
          }).addTo(map).bindPopup(`<b>${op.callsign || op.name || 'Teammate'}</b>`);
        }
      });
    }

    // Start GPS tracking
    function startLocationTracking() {
      if (!navigator.geolocation) {
        updateGpsStatus('error', 'GPS not supported');
        return;
      }

      updateGpsStatus('searching', 'Acquiring GPS...');

      watchId = navigator.geolocation.watchPosition(
        (position) => {
          const { latitude, longitude, accuracy } = position.coords;
          myPosition = { lat: latitude, lng: longitude };
          
          updateGpsStatus('active', `GPS: ¬±${Math.round(accuracy)}m`);
          updateMyMarker(latitude, longitude);

          // Send position to Firebase
          setDoc(doc(db, 'operations', currentOpCode, 'operators', operatorId), {
            name: operatorName,
            callsign: operatorCallsign || null,
            lat: latitude,
            lng: longitude,
            accuracy,
            lastUpdate: serverTimestamp()
          }, { merge: true });
        },
        (error) => {
          console.error('GPS Error:', error);
          updateGpsStatus('error', 'GPS error');
        },
        {
          enableHighAccuracy: true,
          maximumAge: 5000,
          timeout: 15000
        }
      );
    }

    function updateGpsStatus(status, text) {
      const dot = document.getElementById('gps-dot');
      const textEl = document.getElementById('gps-text');
      
      dot.className = 'gps-dot ' + status;
      textEl.textContent = text;
    }

    // Center map on my position
    function centerOnMe() {
      if (myPosition && map) {
        map.setView([myPosition.lat, myPosition.lng], 17);
      }
    }

    // Photo modal
    function openPhotoModal(url) {
      document.getElementById('modal-img').src = url;
      document.getElementById('photo-modal').classList.add('active');
    }

    function closePhotoModal() {
      document.getElementById('photo-modal').classList.remove('active');
    }

    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
        
        btn.classList.add('active');
        document.getElementById('screen-' + btn.dataset.screen).classList.add('active');

        if (btn.dataset.screen === 'map') {
          setTimeout(() => {
            map.invalidateSize();
            if (myPosition) {
              map.setView([myPosition.lat, myPosition.lng], map.getZoom());
            }
          }, 100);
        }
      });
    });

    // Event listeners
    document.getElementById('join-btn').addEventListener('click', joinOperation);
    document.getElementById('center-btn').addEventListener('click', centerOnMe);
    document.getElementById('modal-close').addEventListener('click', closePhotoModal);
    document.getElementById('photo-modal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('photo-modal')) closePhotoModal();
    });

    // Check for code in URL
    function checkUrlCode() {
      const params = new URLSearchParams(window.location.search);
      const code = params.get('code');
      if (code && code.length === 6) {
        code.split('').forEach((char, i) => {
          if (codeInputs[i]) codeInputs[i].value = char.toUpperCase();
        });
      }
    }

    // Restore previous session data
    function restoreSessionData() {
      const name = localStorage.getItem('operatorName');
      const callsign = localStorage.getItem('operatorCallsign');
      if (name) document.getElementById('operator-name').value = name;
      if (callsign) document.getElementById('operator-callsign').value = callsign;
    }

    // Initialize
    initMap();
    checkUrlCode();
    restoreSessionData();
    document.getElementById('loading').classList.add('hidden');
    codeInputs[0].focus();
  </script>
</body>
</html>
